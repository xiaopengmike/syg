<!--components/custom-navbar/custom-navbar.wxml-->
<view class="navbar-wrapper">
  <!-- 渐变背景层 -->
  <view class="navbar-bg" style="height: {{statusBarHeight + navBarHeight}}px;"></view>
  
  <!-- 状态栏占位 -->
  <view class="status-bar" style="height: {{statusBarHeight}}px;"></view>
  
  <!-- 导航栏内容 -->
  <view class="navbar-content" style="height: {{navBarHeight}}px;">
    <!-- 返回按钮 -->
    <view class="navbar-left">
      <view class="back-btn" wx:if="{{showBack}}" bindtap="handleBack">
        <text class="back-icon">‹</text>
      </view>
    </view>
    
    <!-- 标题 -->
    <view class="navbar-title">
      <text class="title-text">{{title}}</text>
    </view>
    
    <!-- 右侧占位 -->
    <view class="navbar-right">
      <slot name="right"></slot>
    </view>
  </view>
</view>

<!-- 占位元素，防止内容被导航栏遮挡 -->
<view class="navbar-placeholder" style="height: {{statusBarHeight + navBarHeight}}px;"></view>
