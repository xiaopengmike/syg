/* components/schedule-card/schedule-card.wxss */

.schedule-card {
  position: absolute;
  left: 4rpx;
  right: 4rpx;
  border-radius: 8rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  z-index: 10;
}

.schedule-card:active {
  opacity: 0.85;
  transform: scale(0.98);
}

.card-content {
  padding: 8rpx 12rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.course-name {
  font-size: 26rpx;
  font-weight: 600;
  color: #fff;
  margin-bottom: 4rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.student-name {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 4rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.course-time {
  font-size: 18rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-top: 4rpx;
}

.course-teacher {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.85);
  margin-top: 2rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.course-location {
  font-size: 18rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 4rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 颜色主题 */
.color-0 {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.color-1 {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
}

.color-2 {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
}

.color-3 {
  background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
}

.color-4 {
  background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
}

.color-5 {
  background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
}

.color-5 .course-name,
.color-5 .course-time,
.color-5 .course-teacher,
.color-5 .course-location {
  color: #555;
}

.color-6 {
  background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 100%);
}

.color-6 .course-name,
.color-6 .course-time,
.color-6 .course-teacher,
.color-6 .course-location {
  color: #555;
}

.color-7 {
  background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
}

.color-7 .course-name,
.color-7 .course-time,
.color-7 .course-teacher,
.color-7 .course-location {
  color: #555;
}


