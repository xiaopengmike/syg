/* components/schedule-grid/schedule-grid.wxss */

.schedule-grid {
  display: flex;
  flex-direction: column;
  height: 100%;
  background: #f5f6fa;
}

/* 周切换器 */
.week-switcher {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background: #fff;
  border-bottom: 1rpx solid #eee;
}

.week-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: #f0f0f0;
}

.week-btn:active {
  background: #e0e0e0;
}

.arrow {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
}

.week-title {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.today-btn {
  font-size: 22rpx;
  color: #4a90d9;
  margin-top: 4rpx;
}

/* 表头 */
.grid-header {
  display: flex;
  background: #fff;
  border-bottom: 1rpx solid #e0e0e0;
  flex-shrink: 0;
}

.time-column-header {
  width: 80rpx;
  flex-shrink: 0;
}

.day-header {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 0;
  border-left: 1rpx solid #f0f0f0;
}

.day-header.today {
  background: #e8f4fd;
}

.day-header.today .day-name,
.day-header.today .day-date {
  color: #4a90d9;
}

.day-name {
  font-size: 24rpx;
  color: #666;
}

.day-date {
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
  margin-top: 4rpx;
}

/* 表格主体 */
.grid-body {
  flex: 1;
  overflow: hidden;
}

.grid-content {
  display: flex;
  position: relative;
}

/* 时间列 */
.time-column {
  width: 80rpx;
  flex-shrink: 0;
  background: #fafafa;
}

.time-slot {
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom: 1rpx solid #f0f0f0;
}

.time-text {
  font-size: 20rpx;
  color: #999;
}

/* 天列容器 */
.days-container {
  display: flex;
  flex: 1;
}

.day-column {
  flex: 1;
  position: relative;
  border-left: 1rpx solid #f0f0f0;
  background: #fff;
}

.day-column.today-column {
  background: #fafcff;
}

/* 时间格子 */
.time-cell {
  height: 60rpx;
  border-bottom: 1rpx solid #f5f5f5;
  position: relative;
}

.time-cell.half-hour {
  border-bottom: 1rpx dashed #f5f5f5;
}

.cell-touch {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
}

.cell-touch:active {
  background: rgba(74, 144, 217, 0.1);
}


