/* pages/index/index.wxss - 登录后首页样式 */

.page-container {
  min-height: 100vh;
  position: relative;
  overflow: hidden;
}

/* 背景装饰 */
.bg-decoration {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 0;
  pointer-events: none;
}

.bg-gradient {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 100vh;
  background: linear-gradient(
    165deg,
    #3B82F6 0%,
    #60A5FA 20%,
    #93C5FD 45%,
    #DBEAFE 70%,
    #FFFFFF 90%
  );
}

.bg-circle {
  position: absolute;
  border-radius: 50%;
  opacity: 0.15;
  background: #FFFFFF;
}

.circle-1 {
  width: 400rpx;
  height: 400rpx;
  top: -100rpx;
  right: -100rpx;
}

.circle-2 {
  width: 300rpx;
  height: 300rpx;
  top: 300rpx;
  left: -150rpx;
}

/* 内容区域 */
.content-wrapper {
  position: relative;
  z-index: 1;
  padding: 40rpx;
  padding-top: 80rpx;
}

/* 头部区域 */
.header {
  margin-bottom: 48rpx;
}

.greeting {
  font-size: 48rpx;
  font-weight: 700;
  color: #FFFFFF;
  margin-bottom: 24rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.user-info {
  display: flex;
  align-items: center;
  background: linear-gradient(
    135deg,
    rgba(255, 255, 255, 0.92) 0%,
    rgba(219, 234, 254, 0.8) 50%,
    rgba(191, 219, 254, 0.6) 100%
  );
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  padding: 24rpx;
  box-shadow: 
    0 8rpx 32rpx rgba(96, 165, 250, 0.18),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.8);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #60A5FA 0%, #3B82F6 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(96, 165, 250, 0.35);
}

.avatar-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #FFFFFF;
}

.user-detail {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.user-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #1E293B;
}

.user-role {
  display: inline-block;
  width: fit-content;
  font-size: 22rpx;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  color: #FFFFFF;
}

.user-role.principal {
  background: linear-gradient(135deg, #8B5CF6 0%, #7C3AED 100%);
}

.user-role.teacher {
  background: linear-gradient(135deg, #60A5FA 0%, #3B82F6 100%);
}

.user-role.student {
  background: linear-gradient(135deg, #10B981 0%, #059669 100%);
}

.logout-btn {
  font-size: 26rpx;
  padding: 12rpx 28rpx;
  background: rgba(239, 68, 68, 0.1);
  color: #EF4444;
  border-radius: 20rpx;
  font-weight: 500;
}

.logout-btn:active {
  background: rgba(239, 68, 68, 0.2);
}

/* 菜单区域 */
.menu-section {
  background: linear-gradient(
    135deg,
    rgba(255, 255, 255, 0.92) 0%,
    rgba(219, 234, 254, 0.8) 50%,
    rgba(191, 219, 254, 0.6) 100%
  );
  backdrop-filter: blur(20rpx);
  border-radius: 32rpx;
  padding: 40rpx;
  box-shadow: 
    0 8rpx 32rpx rgba(96, 165, 250, 0.18),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.8);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.section-line {
  flex: 1;
  height: 2rpx;
  background: linear-gradient(
    to right,
    transparent,
    rgba(96, 165, 250, 0.4),
    transparent
  );
  max-width: 80rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #3B82F6;
  letter-spacing: 4rpx;
}

.menu-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 32rpx;
}

.menu-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  padding: 24rpx 0;
}

.menu-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  transition: transform 0.2s ease;
}

.menu-item:active .menu-icon {
  transform: scale(0.95);
}

.menu-icon .icon {
  font-size: 44rpx;
}

.schedule-icon {
  background: linear-gradient(135deg, #BFDBFE 0%, #93C5FD 100%);
}

.users-icon {
  background: linear-gradient(135deg, #C4B5FD 0%, #A78BFA 100%);
}

.students-icon {
  background: linear-gradient(135deg, #6EE7B7 0%, #34D399 100%);
}

.approval-icon {
  background: linear-gradient(135deg, #FDE68A 0%, #FCD34D 100%);
}

.public-icon {
  background: linear-gradient(135deg, #FDA4AF 0%, #FB7185 100%);
}

/* 徽章样式 */
.badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  min-width: 36rpx;
  height: 36rpx;
  padding: 0 10rpx;
  background: linear-gradient(135deg, #EF4444 0%, #DC2626 100%);
  color: #FFFFFF;
  font-size: 22rpx;
  font-weight: 600;
  line-height: 36rpx;
  text-align: center;
  border-radius: 18rpx;
  box-shadow: 0 4rpx 12rpx rgba(239, 68, 68, 0.4);
}

.menu-text {
  font-size: 26rpx;
  color: #1E293B;
  font-weight: 500;
}
