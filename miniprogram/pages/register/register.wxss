/* pages/register/register.wxss */

.page-container {
  min-height: 100vh;
  position: relative;
  overflow: hidden;
}

/* 背景装饰 */
.bg-decoration {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 0;
  pointer-events: none;
}

.bg-gradient {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 100vh;
  background: linear-gradient(
    165deg,
    #3B82F6 0%,
    #60A5FA 20%,
    #93C5FD 45%,
    #DBEAFE 70%,
    #FFFFFF 90%
  );
}

.bg-circle {
  position: absolute;
  border-radius: 50%;
  opacity: 0.15;
  background: #FFFFFF;
}

.circle-1 {
  width: 400rpx;
  height: 400rpx;
  top: -100rpx;
  right: -100rpx;
}

.circle-2 {
  width: 300rpx;
  height: 300rpx;
  top: 400rpx;
  left: -150rpx;
}

/* 内容区域 */
.content-wrapper {
  position: relative;
  z-index: 1;
  height: 100vh;
  padding: 0 40rpx;
  padding-top: 80rpx;
  padding-bottom: 60rpx;
  box-sizing: border-box;
}

/* Logo 区域 */
.logo-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 40rpx;
}

.logo-container {
  position: relative;
}

.logo-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 32rpx;
  box-shadow: 
    0 12rpx 40rpx rgba(96, 165, 250, 0.4),
    0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

/* 表单区域 */
.form-section {
  background: linear-gradient(
    135deg,
    rgba(255, 255, 255, 0.95) 0%,
    rgba(219, 234, 254, 0.9) 50%,
    rgba(191, 219, 254, 0.7) 100%
  );
  backdrop-filter: blur(20rpx);
  border-radius: 32rpx;
  padding: 40rpx;
  box-shadow: 
    0 8rpx 32rpx rgba(96, 165, 250, 0.18),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.8);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
}

/* 角色选择 */
.role-section {
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 28rpx;
  color: #64748B;
  margin-bottom: 20rpx;
  display: block;
}

.role-cards {
  display: flex;
  gap: 20rpx;
}

.role-card {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 28rpx 16rpx;
  border: 2rpx solid rgba(96, 165, 250, 0.2);
  border-radius: 20rpx;
  background: rgba(255, 255, 255, 0.7);
  transition: all 0.3s;
}

.role-card.active {
  border-color: #60A5FA;
  background: linear-gradient(135deg, rgba(96, 165, 250, 0.18) 0%, rgba(147, 197, 253, 0.12) 100%);
  box-shadow: 0 4rpx 16rpx rgba(96, 165, 250, 0.25);
}

.role-icon {
  font-size: 44rpx;
  margin-bottom: 12rpx;
}

.role-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #1E293B;
  margin-bottom: 8rpx;
}

.role-desc {
  font-size: 22rpx;
  color: #64748B;
  text-align: center;
}

/* 输入框组 */
.input-group {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 16rpx;
  padding: 0 24rpx;
  margin-bottom: 20rpx;
  height: 96rpx;
  border: 1rpx solid rgba(96, 165, 250, 0.15);
  transition: all 0.3s ease;
}

.input-group:focus-within {
  background: rgba(255, 255, 255, 0.95);
  border-color: rgba(96, 165, 250, 0.4);
  box-shadow: 0 4rpx 16rpx rgba(96, 165, 250, 0.12);
}

.input-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
}

.input {
  flex: 1;
  height: 96rpx;
  font-size: 30rpx;
  color: #1E293B;
}

.input-suffix {
  font-size: 36rpx;
  padding: 10rpx;
}

.input-suffix:active {
  opacity: 0.7;
}

/* 注册按钮 */
.btn-register {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  background: linear-gradient(135deg, #60A5FA 0%, #3B82F6 100%);
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 48rpx;
  border: none;
  margin-top: 12rpx;
  box-shadow: 0 8rpx 24rpx rgba(96, 165, 250, 0.45);
  transition: all 0.3s ease;
}

.btn-register:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(96, 165, 250, 0.55);
}

.btn-register.disabled {
  opacity: 0.6;
}

.btn-register::after {
  border: none;
}

/* 登录链接 */
.login-link {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 28rpx;
  font-size: 28rpx;
  color: #64748B;
}

.login-link .link {
  color: #3B82F6;
  margin-left: 8rpx;
  font-weight: 600;
}
