/* pages/login/login.wxss */

.page-container {
  min-height: 100vh;
  position: relative;
  overflow: hidden;
}

/* 背景装饰 */
.bg-decoration {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 0;
  pointer-events: none;
}

.bg-gradient {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 100vh;
  background: linear-gradient(
    165deg,
    #3B82F6 0%,
    #60A5FA 20%,
    #93C5FD 45%,
    #DBEAFE 70%,
    #FFFFFF 90%
  );
}

.bg-circle {
  position: absolute;
  border-radius: 50%;
  opacity: 0.15;
  background: #FFFFFF;
}

.circle-1 {
  width: 400rpx;
  height: 400rpx;
  top: -100rpx;
  right: -100rpx;
}

.circle-2 {
  width: 300rpx;
  height: 300rpx;
  top: 300rpx;
  left: -150rpx;
}

/* 内容区域 */
.content-wrapper {
  position: relative;
  z-index: 1;
  padding: 0 40rpx;
  padding-top: 120rpx;
  display: flex;
  flex-direction: column;
}

/* Logo 区域 */
.logo-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 60rpx;
}

.logo-container {
  position: relative;
}

.logo-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 40rpx;
  box-shadow: 
    0 16rpx 48rpx rgba(96, 165, 250, 0.4),
    0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

/* 表单区域 */
.form-section {
  background: linear-gradient(
    135deg,
    rgba(255, 255, 255, 0.95) 0%,
    rgba(219, 234, 254, 0.9) 50%,
    rgba(191, 219, 254, 0.7) 100%
  );
  backdrop-filter: blur(20rpx);
  border-radius: 32rpx;
  padding: 48rpx 40rpx;
  box-shadow: 
    0 8rpx 32rpx rgba(96, 165, 250, 0.18),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.8);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
}

/* 输入框组 */
.input-group {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 16rpx;
  padding: 0 24rpx;
  margin-bottom: 24rpx;
  min-height: 96rpx;
  border: 1rpx solid rgba(96, 165, 250, 0.15);
  transition: all 0.3s ease;
}

.input-group:focus-within {
  background: rgba(255, 255, 255, 0.95);
  border-color: rgba(96, 165, 250, 0.4);
  box-shadow: 0 4rpx 16rpx rgba(96, 165, 250, 0.12);
}

.input-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.input {
  flex: 1;
  font-size: 30rpx;
  color: #1E293B;
}

.input-suffix {
  font-size: 36rpx;
  padding: 16rpx;
  min-width: 60rpx;
  min-height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 10rpx;
  border-radius: 50%;
  background: transparent;
}

.input-suffix:active {
  background-color: rgba(96, 165, 250, 0.15);
}

/* 登录按钮 */
.btn-login {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #60A5FA 0%, #3B82F6 100%);
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 16rpx;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(96, 165, 250, 0.45);
  transition: all 0.3s ease;
}

.btn-login:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(96, 165, 250, 0.55);
}

.btn-login.disabled {
  opacity: 0.6;
}

.btn-login::after {
  border: none;
}

/* 提示文字 */
.tips {
  text-align: center;
  margin-top: 32rpx;
}

.tips-text {
  font-size: 26rpx;
  color: #64748B;
}

/* 注册链接 */
.register-link {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 32rpx;
  padding-top: 32rpx;
  border-top: 1rpx solid rgba(96, 165, 250, 0.2);
}

.register-link text {
  font-size: 28rpx;
  color: #64748B;
}

.register-link .link {
  color: #3B82F6;
  margin-left: 8rpx;
  font-weight: 600;
}
