/* pages/login/login.wxss */

.container {
  min-height: 100vh;
  background: linear-gradient(180deg, var(--primary-color) 0%, var(--primary-light) 50%, var(--bg-color) 50%);
  padding: var(--spacing-lg);
  display: flex;
  flex-direction: column;
}

/* Logo 区域 */
.logo-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 120rpx;
  padding-bottom: 80rpx;
}

.logo {
  font-size: 120rpx;
  margin-bottom: var(--spacing-md);
}

.app-name {
  font-size: var(--font-xxl);
  font-weight: 600;
  color: var(--text-white);
  margin-bottom: var(--spacing-xs);
}

.app-desc {
  font-size: var(--font-sm);
  color: rgba(255, 255, 255, 0.8);
}

/* 表单区域 */
.form-section {
  background-color: var(--bg-white);
  border-radius: var(--radius-xl);
  padding: var(--spacing-xl);
  box-shadow: var(--shadow-lg);
}

/* 输入框组 */
.input-group {
  display: flex;
  align-items: center;
  background-color: var(--bg-gray);
  border-radius: var(--radius-md);
  padding: var(--spacing-md);
  margin-bottom: var(--spacing-md);
  min-height: 96rpx;
}

.input-icon {
  font-size: 40rpx;
  margin-right: var(--spacing-sm);
}

.input {
  flex: 1;
  font-size: var(--font-md);
  color: var(--text-primary);
}

.input-content {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.phone-text {
  font-size: var(--font-md);
  color: var(--text-primary);
  font-weight: 500;
}

.phone-change {
  font-size: var(--font-sm);
  color: var(--primary-color);
}

.input-suffix {
  font-size: 36rpx;
  padding: 16rpx;
  min-width: 60rpx;
  min-height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 10rpx;
  border-radius: 50%;
  background: transparent;
  position: relative;
  z-index: 10;
}

.input-suffix:active {
  background-color: rgba(0, 0, 0, 0.05);
}

/* 获取手机号按钮 */
.btn-get-phone {
  flex: 1;
  background-color: transparent;
  color: var(--primary-color);
  font-size: var(--font-md);
  text-align: left;
  padding: 0;
  border: none;
  line-height: 1.5;
}

.btn-get-phone::after {
  border: none;
}

/* 登录按钮 */
.btn-login {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
  color: var(--text-white);
  font-size: var(--font-lg);
  font-weight: 500;
  border-radius: var(--radius-round);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: var(--spacing-lg);
  border: none;
}

.btn-login.disabled {
  opacity: 0.6;
}

.btn-login::after {
  border: none;
}

/* 提示文字 */
.tips {
  text-align: center;
  margin-top: var(--spacing-lg);
}

.tips-text {
  font-size: var(--font-sm);
  color: var(--text-placeholder);
}

/* 注册链接 */
.register-link {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: var(--spacing-lg);
  padding-top: var(--spacing-lg);
  border-top: 1rpx solid var(--border-light);
}

.register-link text {
  font-size: var(--font-md);
  color: var(--text-secondary);
}

.register-link .link {
  color: var(--primary-color);
  margin-left: var(--spacing-xs);
  font-weight: 500;
}
