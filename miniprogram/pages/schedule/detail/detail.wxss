/* pages/schedule/detail/detail.wxss */

.container {
  min-height: 100vh;
  background: #f5f6fa;
  padding: 20rpx;
  padding-bottom: 200rpx;
}

.loading-state {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 300rpx;
  color: #999;
  font-size: 28rpx;
}

/* 信息卡片 */
.info-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.main-card {
  background: linear-gradient(135deg, #60A5FA 0%, #3B82F6 100%);
  color: #FFFFFF;
}

.course-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.course-name {
  font-size: 40rpx;
  font-weight: 600;
  flex: 1;
  margin-right: 20rpx;
}

.course-time-badge {
  background: rgba(255, 255, 255, 0.2);
  padding: 12rpx 20rpx;
  border-radius: 20rpx;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  white-space: nowrap;
}

.time-icon {
  margin-right: 8rpx;
}

.course-date {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  opacity: 0.9;
  margin-bottom: 12rpx;
}

.date-icon {
  margin-right: 12rpx;
}

.course-location {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  opacity: 0.9;
}

.location-icon {
  margin-right: 12rpx;
}

/* 卡片标题 */
.card-title {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.title-icon {
  margin-right: 12rpx;
}

/* 教师信息 */
.teacher-info {
  display: flex;
  align-items: center;
}

.teacher-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #60A5FA 0%, #3B82F6 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: 600;
  margin-right: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(96, 165, 250, 0.35);
}

.teacher-detail {
  display: flex;
  flex-direction: column;
}

.teacher-name {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.teacher-subject {
  font-size: 24rpx;
  color: #999;
  margin-top: 4rpx;
}

/* 学生列表 */
.student-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.student-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.student-item:last-child {
  border-bottom: none;
}

.student-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #10B981 0%, #059669 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #FFFFFF;
  font-size: 26rpx;
  font-weight: 600;
  margin-right: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(16, 185, 129, 0.3);
}

.student-detail {
  display: flex;
  flex-direction: column;
}

.student-name {
  font-size: 28rpx;
  color: #333;
}

.student-class {
  font-size: 22rpx;
  color: #999;
  margin-top: 4rpx;
}

/* 备注 */
.remark-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 元信息 */
.meta-card {
  background: #fafafa;
}

.meta-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 0;
}

.meta-label {
  font-size: 26rpx;
  color: #999;
}

.meta-value {
  font-size: 26rpx;
  color: #666;
}

/* 操作按钮 */
.action-area {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  gap: 20rpx;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background: #fff;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.btn-edit, .btn-delete {
  flex: 1;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  border-radius: 44rpx;
}

.btn-edit {
  background: linear-gradient(135deg, #60A5FA 0%, #3B82F6 100%);
  color: #FFFFFF;
  box-shadow: 0 6rpx 20rpx rgba(96, 165, 250, 0.4);
}

.btn-delete {
  background: #fff;
  color: #ff4d4f;
  border: 2rpx solid #ff4d4f;
}

.btn-icon {
  margin-right: 8rpx;
}


