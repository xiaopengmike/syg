/* pages/schedule/create/create.wxss */

.container {
  min-height: 100vh;
  background: #f5f6fa;
  padding: 20rpx;
  padding-bottom: 160rpx;
}

/* 表单卡片 */
.form-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.form-item {
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.form-item:last-child {
  border-bottom: none;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.form-label.required::before {
  content: '*';
  color: #ff4d4f;
  margin-right: 8rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  font-size: 28rpx;
  color: #333;
  background: #f8f9fa;
  border-radius: 8rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.form-textarea {
  width: 100%;
  height: 160rpx;
  font-size: 28rpx;
  color: #333;
  background: #f8f9fa;
  border-radius: 8rpx;
  padding: 20rpx;
  box-sizing: border-box;
}

.form-picker {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #333;
  background: #f8f9fa;
  border-radius: 8rpx;
  padding: 0 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.form-picker.placeholder {
  color: #999;
}

.picker-arrow {
  font-size: 32rpx;
  color: #ccc;
}

.form-static {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #666;
  background: #f8f9fa;
  border-radius: 8rpx;
  padding: 0 20rpx;
}

/* 时间选择行 */
.form-row {
  display: flex;
  gap: 20rpx;
}

.form-item.half {
  flex: 1;
}

/* 学生选择器 */
.student-selector {
  min-height: 80rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
  padding: 16rpx 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.selected-students {
  flex: 1;
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.student-tag {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.student-selector .placeholder {
  color: #999;
  font-size: 28rpx;
}

/* 按钮区域 */
.btn-area {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 90;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background: #fff;
  box-shadow: 0 -10rpx 20rpx rgba(0, 0, 0, 0.05);
}

.btn-submit {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-submit.disabled {
  opacity: 0.6;
}

/* 弹窗样式 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 100;
}

.modal-content {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  max-height: 70vh;
  display: flex;
  flex-direction: column;
  z-index: 101;
  transform: translateY(100%);
  transition: transform 0.3s ease;
}

.modal-content.show {
  transform: translateY(0);
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.modal-header-actions {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.add-student-btn {
  display: flex;
  align-items: center;
  gap: 6rpx;
  padding: 10rpx 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-size: 24rpx;
  border-radius: 30rpx;
}

.add-student-btn .add-icon {
  font-size: 28rpx;
  font-weight: bold;
}

.modal-close {
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #999;
}

.modal-body {
  flex: 1;
  overflow-y: auto;
  padding: 20rpx 30rpx;
}

.student-list {
  display: flex;
  flex-direction: column;
}

.student-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.student-item:last-child {
  border-bottom: none;
}

.student-checkbox {
  width: 44rpx;
  height: 44rpx;
  border: 2rpx solid #ddd;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  font-size: 24rpx;
  color: #fff;
}

.student-item.selected .student-checkbox {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-color: #667eea;
}

.student-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.student-name {
  font-size: 30rpx;
  color: #333;
}

.student-class {
  font-size: 24rpx;
  color: #999;
  margin-top: 4rpx;
}

.empty-list {
  padding: 60rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.empty-icon {
  font-size: 60rpx;
}

.empty-add-btn {
  margin-top: 16rpx;
  padding: 16rpx 40rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-size: 26rpx;
  border-radius: 30rpx;
}

.modal-footer {
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  border-top: 1rpx solid #f0f0f0;
}

.btn-confirm {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}


