<!--pages/users/add/add.wxml-->
<view class="container">
  <view class="form-card">
    <view class="form-header">
      <text class="form-icon">{{role === 'teacher' ? '👨‍🏫' : '👨‍🎓'}}</text>
      <text class="form-title">添加{{role === 'teacher' ? '老师' : '学生'}}</text>
    </view>

    <!-- 姓名 -->
    <view class="form-group">
      <view class="form-label">
        <text class="required">*</text>
        <text>姓名</text>
      </view>
      <input 
        class="form-input" 
        placeholder="请输入{{role === 'teacher' ? '老师' : '学生'}}姓名"
        value="{{name}}"
        bindinput="onNameInput"
      />
    </view>

    <!-- 科目（老师） -->
    <view class="form-group" wx:if="{{role === 'teacher'}}">
      <view class="form-label">
        <text>教授科目</text>
      </view>
      <input 
        class="form-input" 
        placeholder="请输入教授科目"
        value="{{subject}}"
        bindinput="onSubjectInput"
      />
    </view>

    <!-- 备注 -->
    <view class="form-group">
      <view class="form-label">
        <text>备注</text>
      </view>
      <textarea 
        class="form-textarea" 
        placeholder="选填备注信息"
        value="{{remark}}"
        bindinput="onRemarkInput"
        maxlength="200"
      />
    </view>

    <!-- 提示 -->
    <view class="form-tip">
      <text>💡 保存后可发送邀请给真实用户绑定</text>
    </view>

    <!-- 保存按钮 -->
    <button 
      class="btn-save {{isSubmitting ? 'disabled' : ''}}" 
      bindtap="handleSave"
      disabled="{{isSubmitting}}"
    >
      {{isSubmitting ? '保存中...' : '保 存'}}
    </button>
  </view>
</view>





