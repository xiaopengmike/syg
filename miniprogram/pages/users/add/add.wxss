/* pages/users/add/add.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f6f8;
  padding: 20rpx;
}

.form-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
}

.form-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}

.form-icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
}

.form-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.form-group {
  margin-bottom: 32rpx;
}

.form-label {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
  font-size: 28rpx;
  color: #666;
}

.form-label .required {
  color: #ff4d4f;
  margin-right: 8rpx;
}

.form-input {
  width: 100%;
  height: 88rpx;
  background-color: #f5f6f8;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  box-sizing: border-box;
}

.form-textarea {
  width: 100%;
  height: 160rpx;
  background-color: #f5f6f8;
  border-radius: 12rpx;
  padding: 20rpx 24rpx;
  font-size: 30rpx;
  box-sizing: border-box;
}

.form-tip {
  background: linear-gradient(135deg, rgba(96, 165, 250, 0.12) 0%, rgba(147, 197, 253, 0.08) 100%);
  padding: 20rpx 24rpx;
  border-radius: 12rpx;
  margin-bottom: 40rpx;
  border: 1rpx solid rgba(96, 165, 250, 0.2);
}

.form-tip text {
  font-size: 26rpx;
  color: #3B82F6;
}

.btn-save {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  background: linear-gradient(135deg, #60A5FA 0%, #3B82F6 100%);
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 48rpx;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(96, 165, 250, 0.45);
}

.btn-save:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(96, 165, 250, 0.55);
}

.btn-save.disabled {
  opacity: 0.6;
}





