/* pages/users/add/add.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f6f8;
  padding: 20rpx;
}

.form-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
}

.form-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}

.form-icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
}

.form-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.form-group {
  margin-bottom: 32rpx;
}

.form-label {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
  font-size: 28rpx;
  color: #666;
}

.form-label .required {
  color: #ff4d4f;
  margin-right: 8rpx;
}

.form-input {
  width: 100%;
  height: 88rpx;
  background-color: #f5f6f8;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  box-sizing: border-box;
}

.form-textarea {
  width: 100%;
  height: 160rpx;
  background-color: #f5f6f8;
  border-radius: 12rpx;
  padding: 20rpx 24rpx;
  font-size: 30rpx;
  box-sizing: border-box;
}

.form-tip {
  background-color: #E8F4FD;
  padding: 20rpx 24rpx;
  border-radius: 12rpx;
  margin-bottom: 40rpx;
}

.form-tip text {
  font-size: 26rpx;
  color: #4A90D9;
}

.btn-save {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 48rpx;
  border: none;
}

.btn-save.disabled {
  opacity: 0.6;
}





