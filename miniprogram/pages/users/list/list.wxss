/* pages/users/list/list.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f6f8;
  padding-bottom: 120rpx;
}

/* Tab 切换 */
.tab-bar {
  display: flex;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
}

.tab-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 28rpx 0;
  font-size: 30rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #4A90D9;
  font-weight: 600;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  background-color: #4A90D9;
  border-radius: 3rpx;
}

.tab-count {
  font-size: 24rpx;
  background-color: #eee;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.tab-item.active .tab-count {
  background-color: #E8F4FD;
  color: #4A90D9;
}

/* 搜索框 */
.search-bar {
  display: flex;
  align-items: center;
  background-color: #fff;
  margin: 20rpx;
  padding: 0 24rpx;
  border-radius: 40rpx;
  height: 76rpx;
}

.search-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
}

.search-clear {
  font-size: 28rpx;
  color: #999;
  padding: 10rpx;
}

/* 用户列表 */
.user-list {
  background-color: #fff;
  margin: 0 20rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.user-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.user-item:last-child {
  border-bottom: none;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.user-avatar text {
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 6rpx;
}

.user-meta {
  font-size: 24rpx;
  color: #999;
}

.user-status {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  margin-right: 12rpx;
}

.user-status.unbound {
  background-color: #f0f0f0;
  color: #999;
}

.user-status.pending {
  background-color: #FFF7E6;
  color: #FA8C16;
}

.user-status.bound {
  background-color: #E6F7ED;
  color: #52C41A;
}

.user-status.registered {
  background-color: #E8F4FD;
  color: #4A90D9;
}

.user-status.pending_approval {
  background-color: #FFF0F6;
  color: #EB2F96;
}

.user-status.rejected {
  background-color: #FFF1F0;
  color: #FF4D4F;
}

.user-arrow {
  font-size: 36rpx;
  color: #ccc;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.empty-tip {
  font-size: 26rpx;
  color: #999;
}

/* 加载中 */
.loading-state {
  text-align: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 添加按钮 */
.add-btn {
  position: fixed;
  right: 40rpx;
  bottom: 80rpx;
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
}

.add-btn text {
  color: #fff;
  font-size: 56rpx;
  font-weight: 300;
}





