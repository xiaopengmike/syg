<!--pages/promo/index.wxml - 宣传首页（美化版）-->
<view class="page-container {{animationReady ? 'animate-ready' : ''}}">
  <!-- 背景装饰层 -->
  <view class="bg-decoration">
    <view class="bg-gradient"></view>
    <view class="bg-circle circle-1"></view>
    <view class="bg-circle circle-2"></view>
    <view class="bg-circle circle-3"></view>
    <view class="bg-wave"></view>
  </view>

  <!-- 主内容区域 -->
  <view class="content-wrapper">
    <!-- Hero 区域 -->
    <view class="hero-section">
      <!-- Logo 图片 -->
      <view class="logo-container anim-item anim-delay-1">
        <image class="logo-image" src="/images/logo.jpg" mode="aspectFill"></image>
        <view class="logo-glow"></view>
      </view>
    </view>

    <!-- Banner 区域 -->
    <view class="banner-section anim-item anim-delay-4">
      <view class="banner-card">
        <image class="banner-image" src="/images/banner.jpg" mode="aspectFill"></image>
        <view class="banner-overlay"></view>
      </view>
      
      <!-- 未登录时显示登录按钮 -->
      <view class="login-section" wx:if="{{!isLoggedIn}}">
        <view class="greeting-text">{{greeting}}，欢迎使用</view>
        <button class="login-btn" bindtap="goToLogin">
          <text class="btn-text">登录 / 注册</text>
          <text class="btn-arrow">→</text>
        </button>
      </view>
    </view>

    <!-- 功能入口区域 -->
    <view class="features-section">
      <view class="section-header anim-item anim-delay-5">
        <view class="section-line"></view>
        <text class="section-title">功能入口</text>
        <view class="section-line"></view>
      </view>

      <view class="features-grid">
        <!-- 课程系统 -->
        <view class="feature-card anim-item anim-delay-6" bindtap="goToSystem">
          <view class="feature-icon-wrapper icon-system">
            <text class="feature-icon">🏠</text>
          </view>
          <view class="feature-content">
            <text class="feature-name">课程系统</text>
            <text class="feature-desc">管理课程与排课</text>
          </view>
          <view class="feature-arrow">›</view>
        </view>

        <!-- 校区参观 -->
        <view class="feature-card anim-item anim-delay-7" bindtap="goToCampusTour">
          <view class="feature-icon-wrapper icon-tour">
            <text class="feature-icon">🏫</text>
          </view>
          <view class="feature-content">
            <text class="feature-name">校区参观</text>
            <text class="feature-desc">了解校区环境</text>
          </view>
          <view class="feature-arrow">›</view>
        </view>

        <!-- 课程介绍 -->
        <view class="feature-card anim-item anim-delay-8" bindtap="goToCourseIntro">
          <view class="feature-icon-wrapper icon-course">
            <text class="feature-icon">📖</text>
          </view>
          <view class="feature-content">
            <text class="feature-name">课程介绍</text>
            <text class="feature-desc">浏览精品课程</text>
          </view>
          <view class="feature-arrow">›</view>
        </view>
      </view>
    </view>

    <!-- 底部品牌区域 -->
    <view class="footer-section anim-item anim-delay-9">
      <view class="footer-divider"></view>
      <view class="footer-brand">
        <image class="footer-logo" src="/images/logo.jpg" mode="aspectFit"></image>
        <text class="footer-text">智慧教育 · 高效管理</text>
      </view>
    </view>
  </view>
</view>
